// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model user {
    id        Int            @unique @default(autoincrement())
    userId    String         @id
    password  String
    nickname  String         @unique
    Items     String[]
    isCompany Boolean
}

model cart {
    id        Int    @unique @default(autoincrement())
    userId    Int
    image_url String
    price     Int
}

model luxury_goods {
    id          Int    @unique @default(autoincrement())
    name        String
    serial      String
    brand       String
    category    String
    material    String
    designer    String
    madeCountry String
    factory     String
    totalSupply Int
    created_at  String
    season      String
    price       Int
    image_url   String
    description String
}

model luxury_selling {
    id        Int    @unique @default(autoincrement())
    image_url String
    content   String
    price     Int
}

model resell_selling {
    id        Int    @unique @default(autoincrement())
    image_url String
    content   String
    price     Int
}

model posts {
    id        Int      @unique @default(autoincrement())
    userId    String
    title     String
    content   String
    createdAt DateTime @default(now())
}
