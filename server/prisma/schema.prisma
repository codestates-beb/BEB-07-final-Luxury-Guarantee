// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model user {
    id          Int            @unique @default(autoincrement())
    userId      String         @id
    password    String
    nickname    String         @unique
    tokenAmount String?
    ethAmount   String?
    address     String
    isCompany   Boolean
    Items       luxury_goods[]
    post        posts[]
    Cart        cart[]
}

model cart {
    id        Int    @unique @default(autoincrement())
    goodsId   Int
    image_url String
    price     Int
    cartowner user   @relation(fields: [userId], references: [id])
    userId    Int
}

model luxury_goods {
    id          Int      @unique @default(autoincrement())
    name        String
    serial      String
    brand       String
    category    String
    material    String
    designer    String
    madeCountry String
    factory     String
    totalSupply Int
    created_at  String
    season      String
    price       Int
    image_url   String
    description String
    isResell    Boolean? @default(false)
    isSelling   Boolean? @default(false)
    owner       user     @relation(fields: [userId], references: [id])
    userId      Int
    ipfsurl     String?
    tokenId     Int?
}

model posts {
    id        Int      @unique @default(autoincrement())
    category  String
    title     String
    content   String
    createdAt DateTime @default(now())
    userId    Int
    owner     user     @relation(fields: [userId], references: [id])
}
